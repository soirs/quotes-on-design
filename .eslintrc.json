{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "extends": [
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "js": true,
      "jsx": true
    },
    "ecmaVersion": 2020
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/extensions": [
      ".js",
      ".jsx",
      ".ts",
      ".tsx"
    ]
  },
  "rules": {
    "space-before-function-paren": 0,
    "yoda": 1,
    "semi": [
      "warn",
      "always"
    ],
    "camelcase": 1,
    "spaced-comment": 1,
    "no-use-before-define": 2,
    "no-undef": 2,
    "no-new": 1,
    "no-unused-vars": 1,
    "padded-blocks": 0,
    "one-var": 0,
    "no-multiple-empty-lines": 1,
    "space-in-parens": 1,
    "space-infix-ops": 2,
    "quotes": [
      1,
      "single"
    ],
    "no-unmodified-loop-condition": 0,
    "eqeqeq": 0,
    "semi-spacing": [
      2,
      {
        "before": false
      }
    ],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx",
          ".tsx",
          ".ts"
        ]
      }
    ],
    "no-trailing-spaces": 1
  }
}