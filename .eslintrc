{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "extends": [
    "airbnb",
    "plugin:prettier/recommended",
    "plugin:import/recommended",
    "plugin:import/errors"
  ],
  "plugins": ["prettier", "import"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "js": true,
      "jsx": true
    },
    "ecmaVersion": 2020
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/extensions": [
      ".js",
      ".jsx"
    ]
  },
  "rules": {
    "prettier/prettier": [
      "warn",
      {},
      {
        "usePrettierrc": false
      }
    ]
  }
}
